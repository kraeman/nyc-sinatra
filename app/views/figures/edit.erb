<h2>Edit Historical Figure</h2>

<form action="/figures/<%= @figure.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet Name:</label>
    <br>
    <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>


    <h3>Existing owners</h3>
    <% @titles.each do |title| %>
      <input type="radio" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>"><%= title.name %></input><br>
    <% end %>
    <br>

    <h3>"Missy"</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="title[name]" id="title_name"></input>
    <br><br>

    <h3>Existing owners</h3>
    <% @landmarks.each do |landmark| %>
      <input type="radio" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %></input><br>
    <% end %>
    <br>

    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="landmark[name]" id="new_landmark"></input>
    <br><br>

    <input type="submit" value="Edit Figure">
  </form> 

<a class="button" href="/figures">Landmarks</a>
<a class="button" href="/">Home</a>
